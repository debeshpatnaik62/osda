.blogsec{padding:15px 15px 15px 60px;margin-top: 30px;}
.blogsec h2{font-size: 29px;font-weight: normal;color: #666;margin-top: 20px;}
.blogsec p{color: #656565;margin: 20px 0px;}
.blogsec ul{border-top: 1px solid #e8e8e8;border-bottom: 1px solid #e8e8e8;margin-top: 40px;}
.blogsec ul li{display: inline-block;width: 32%;margin: 6px 0px;text-align: center;}
.blogsec ul li a{display: block;color: #848383;cursor: pointer;}
.blogsec ul li a span{}
.blogsec ul li a:hover{color: #9e3a86;}
.blockquote-footer{margin-bottom: 20px;font-size: 15px;color: #b3b0b3;font-weight: normal;}
.blogimg{width: 100%;height: auto;border-radius: 5px;position: relative;}
.blogimg img{border-radius: 5px;    width: 100%;}
.blogdate{position: absolute;top: 0px;left: -70px;background: transparent;padding: 5px 10px;color: #747474;font-weight: bold;line-height: 14px;text-align: center;font-size: 20px;border-top-left-radius: 5px;}
.blogdate p{border-bottom: 4px solid #eaeaea;margin-bottom: 5px;padding-bottom: 5px;font-size: 19px;color: #747474;margin-top: 3px;line-height: 18px;font-weight: bold;}
.blogdate p span{font-size: 18px;font-weight: normal;}
.blogdate span{padding-bottom: 2px;display: block;padding-top: 5px;font-size: 25px;}
.blogright{padding: 0px 20px 20px 20px;margin-top: 35px;}
.blogright h2{margin-bottom: 20px;margin-top: 0;font-weight: normal;color: #797979;font-size: 30px;}
.blogright ul{}
.blogright ul li{margin-bottom: 0px;border-bottom: 1px solid #eaeaea;}
.blogright ul li i{float: right;font-weight: normal;font-size: 13px;padding-right: 7px;color: #c1c1c1;}
.blogright ul li a{color: #888;font-size: 16px;display: block;padding: 6px 0px;}
.blogright ul li a:hover{color: #9f3a86;}
.blogmedia{width: 70px;height: 60px;overflow: hidden;margin-right: 16px;}
.blogmedia img{   width: 100%;}
.media-body h5{font-weight: 500;color: #000;font-family: "PT Sans", sans-serif;font-size: 14px;}
.media-body p{margin: 0;font-size: 13px;color: #84398b;}
.media{padding-bottom: 15px !important;}
.blogright ul li:last-child {border-bottom: none!important;}
.list-unstyled{margin-top: 30px;}

/*Inner page*/
.comments{}
.comments h2{margin-bottom: 20px;margin-top: 0;font-weight: normal;color: #797979;font-size: 30px;}
.mandatory {color: #FF0000;text-decoration: none;float: right;margin: -25px -12px 0px 0px;}
.comment-tag {padding: 15px;background: #e4e4e4;border-radius: 50%;width: 100%;color: #9e3a87;font-weight: bold;font-size: 20px;}
#CommentsDetails .media-body p {margin: 0;font-size: 13px;color: #565656;    margin-bottom: 10px;}
#CommentsDetails{margin-bottom: 60px;}

/*Media*/

@media screen and (max-width: 480px){	
.blogdate{position: absolute;top: 5px;left: 5px;background: linear-gradient(45deg, #643891 0%,#a03a86 100%);padding: 5px 16px;color: #fff;font-weight: bold;line-height: 14px;text-align: center;font-size: 14px;border-radius: 0px;}
.blogdate p{border-bottom: 1px solid #fff;margin-bottom: 5px;padding-bottom: 5px;font-size: 13px;color: #fff;margin-top: 3px;}
.blogdate span{padding-bottom: 2px;display: block;}
.blogsec {padding: 15px 15px 15px 15px;	}
.blogdate span {font-size: 18px;}
.blogdate p span {font-size: 14px;padding: 0;}	

.blogmedia{width: 100px;height: 70px;overflow: hidden;margin-right: 16px;}
.blogmedia img{   width: 100%;}
.media-body h5{font-weight: 500;color: #000;}
.media-body p{margin: 0;font-size: 13px;color: #84398b;}
	
	
	
	
	
	
	
	
	
	
}