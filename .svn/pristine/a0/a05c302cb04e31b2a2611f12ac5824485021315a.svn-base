.more {display: none;color:#636363;}
.myBtn{background: transparent;border: none;color: #8c8c8c;}
 button:focus {outline: none;}
/*.dots{display: inline-block!important;}*/
.color{display: inline;}
.color span {color: #636363;padding: 0;}





.read-more {position: relative;display: block;color: #a9a9a9;text-align: center;border: none;background: transparent;    margin: 5px auto 0px;}
.read-more:after{content: "\f054";position: absolute;right: -8px;top: 3px;font-family: fontawesome;opacity: 0;}
.read-more:hover:after{opacity: 1;transition: .5s;right: -18px;color: var(--osdaColor2)}
.read-more:hover{color: var(--osdaColor2)}
.captcha_refresh{  cursor: pointer;border: 1px solid #ced4da;padding: 3px 15px;font-size: 20px;color: #9e3a87;}










